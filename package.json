{
  "name": "mocia",
  "version": "1.0.0",
  "description": "NodeJS mock REST API server",
  "main": "dist/main.js",
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/main.js",
    "dev-server": "nodemon js/main.js --exec \"node -r dotenv/config -r babel-register\"",
    "dev-client": "nodemon js/wsclient.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel js -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w js test"
  },
  "dependencies": {
    "boom": "^7.2.0",
    "config": "^1.30.0",
    "hapi": "^17.5.0",
    "hapi-pino": "^4.0.4",
    "hjson": "^3.1.1",
    "mongoose": "^5.1.4",
    "ws": "^5.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-env": "^2.4.1",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.12.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-watch": "^3.1.3",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
